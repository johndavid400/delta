.account_block
  .row
    .span3
      %h4= current_user.bank_account.name
    .span3
      = "Account Balance: #{number_to_currency(current_user.bank_account.balance)}"
    .span2
    .span3
      .btn= link_to 'Transfer', transfer_from_path(account_id: current_user.bank_account)
      .btn= link_to 'Edit', edit_account_path(current_user.bank_account)
- @accounts.each do |account|
  - unless account == current_user.bank_account
    .account_block
      .row
        .span3
          %h4= account.name
        .span3
          = "Account Balance: #{number_to_currency(account.balance)}"
        .span2
          = "Allocation Rate: #{account.allocation_rate}"
        .span3
          .btn= link_to 'Transfer', transfer_from_path(account_id: account)
          .btn= link_to 'Edit', edit_account_path(account)
          .btn= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }
